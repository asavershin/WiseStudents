<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="Create table comment_jn" author="asavershin">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="comment_jn"/>
            </not>
        </preConditions>
        <createTable tableName="comment_jn">
            <column name="comment_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="comment_pk"/>
            </column>
            <column name="is_anonymous" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints
                        foreignKeyName="fk_comment_user"
                        references="user_jn(user_id)"
                        nullable="false"/>
            </column>
            <column name="parent_id" type="bigint">
                <constraints
                        foreignKeyName="fk_comment_parent"
                        references="comment_jn(comment_id)"
                        nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>