<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="Create table file_jn" author="asavershin">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="file_jn"/>
            </not>
        </preConditions>
        <createTable tableName="file_jn">

            <column name="file_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="files_pk"/>
            </column>

            <column name="file" type="varchar">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="create_table_files_content" author="asavershin">
        <createTable tableName="files_content">

            <column name="content_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_files_content" references="content_jn(content_id)" />
            </column>

            <column name="file_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_files_posts_file" references="file_jn(file_id)" />
            </column>

        </createTable>
    </changeSet>

    <changeSet id="create_table_files_comments" author="asavershin">
        <createTable tableName="files_comments">

            <column name="comment_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_files_posts_comment" references="comment_jn(comment_id)" />
            </column>

            <column name="file_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_files_posts_file" references="file_jn(file_id)" />
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>