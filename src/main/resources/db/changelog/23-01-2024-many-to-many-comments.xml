<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">


    <changeSet id="create_table_content_comments" author="asavershin">
        <createTable tableName="content_comments">

            <column name="content_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_content_comment" references="content_jn(content_id)" />
            </column>

            <column name="comment_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_comments_posts" references="comment_jn(comment_id)" />
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>