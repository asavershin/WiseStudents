<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="Create table subjects_ref" author="asavershin">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="subject_ref"/>
            </not>
        </preConditions>
        <createTable tableName="subject_ref">
            <column name="subject_id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="subject_ref_pk"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_subject_content" author="asavershin">
        <createTable tableName="subject_content">

            <column name="content_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_content_subject" references="content_jn(content_id)" />
            </column>

            <column name="subject_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_subject_content" references="subject_ref(subject_id)" />
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>