<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="Create table user_jn" author="asavershin">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="user_jn"/>
            </not>
        </preConditions>
        <createTable tableName="user_jn">
            <column name="user_id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_jn_pk"/>
            </column>
            <column name="user_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="user_login" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="sex" type="varchar(50)"/>
            <column name="city" type="varchar(50)"/>
            <column name="banned_until" type="date"/>
        </createTable>
    </changeSet>

    <changeSet id="Create index on login" author="asavershin">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="user_jn"/>
            <not>
                <indexExists tableName="user_jn" indexName="idx_user_jn_login"/>
            </not>
        </preConditions>
        <createIndex tableName="user_jn" indexName="idx_user_jn_login">
            <column name="user_login"/>
        </createIndex>
    </changeSet>

    <changeSet id="Insert data into user_jn" author="asaversin">
        <insert tableName="user_jn">
            <column name="user_login" value="admin"/>
            <column name="user_name" value="admin"/>
            <column name="user_password" value="admin"/>
            <column name="role" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>
</databaseChangeLog>