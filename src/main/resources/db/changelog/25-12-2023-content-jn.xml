<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="Create table content_jn" author="asavershin">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="content_jn"/>
            </not>
        </preConditions>
        <createTable tableName="content_jn">

            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="content_jn_pk"/>
            </column>

            <column name="content_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="content_text" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="bigint">
                <constraints
                        foreignKeyName="fk_content_user"
                        references="user_jn(id)"
                        nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="Create user_id index for content" author="asavershin">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="content_jn" indexName="idx_content_jn_user_id"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_content_jn_user_id" tableName="content_jn" unique="false">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>